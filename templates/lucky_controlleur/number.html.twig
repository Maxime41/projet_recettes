{% extends 'base.html.twig' %}

{% block title %} Tirage au sort !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; display: flex; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .rouge { background-color: red; }
    .noir { background-color: black; color: white; }
</style>
    {% for key, nombre in numbers %}
        <div class="example-wrapper">
            <h1> Tirage au sort </h1>
            {% if nombre is even %}
                <div class="rouge"> {{nombre}} </div>
            {% endif %}

            {% if nombre is odd %}
                <div class="noir"> {{nombre}} </div>
            {% endif %}
        </div>
    {% endfor %}
{% endblock %}